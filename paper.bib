}

@misc{chakraborty_discovery_2025,
	title = {Discovery of {Quasi}-periodic {Eruptions} in the {Tidal} {Disruption} {Event} and {Extreme} {Coronal} {Line} {Emitter} {AT2022upj}: implications for the {QPE}/{TDE} fraction and a connection to {ECLEs}},
