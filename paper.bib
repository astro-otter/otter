	file = {IOP Full Text PDF:/home/nfranz/snap/zotero-snap/common/Zotero/storage/XYJIXDEQ/Guillochon and Ramirez-Ruiz - 2015 - A DARK YEAR FOR TIDAL DISRUPTION EVENTS.pdf:application/pdf},
