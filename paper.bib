@article{roth_x-ray_2016,
	title = {{THE} {X}-{RAY} {THROUGH} {OPTICAL} {FLUXES} {AND} {LINE} {STRENGTHS} {OF} {TIDAL} {DISRUPTION} {EVENTS}},
