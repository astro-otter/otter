	journal = {The Astrophysical Journal Letters},
	author = {Metzger, Brian D.},
	month = sep,
	year = {2022},
	note = {Publisher: The American Astronomical Society},
	keywords = {notion},
	pages = {L12},
	file = {IOP Full Text PDF:/home/nfranz/snap/zotero-snap/common/Zotero/storage/K5EAMG29/Metzger - 2022 - Cooling Envelope Model for Tidal Disruption Events.pdf:application/pdf},
}

@article{dai_unified_2018,
	title = {A {Unified} {Model} for {Tidal} {Disruption} {Events}},
	volume = {859},
