@article{komossa_discovery_2008,
	title = {Discovery of {Superstrong}, {Fading}, {Iron} {Line} {Emission} and {Double}-peaked {Balmer} {Lines} of the {Galaxy} {SDSS} {J095209}.56+214313.3: {The} {Light} {Echo} of a {Huge} {Flare}},
