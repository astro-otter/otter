	author = {Cendes, Yvette and Berger, Edo and Alexander, Kate D. and Chornock, Ryan and Margutti, Raffaella and Metzger, Brian and Wieringa, Mark H. and Bietenholz, Michael F. and Hajela, Aprajita and Laskar, Tanmoy and Stroh, Michael C. and Terreran, Giacomo},
