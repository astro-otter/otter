	author = {Gezari, Suvi and Heckman, Tim and Cenko, S. Bradley and Eracleous, Michael and Forster, Karl and Gonçalves, Thiago S. and Martin, D. Chris and Morrissey, Patrick and Neff, Susan G. and Seibert, Mark and Schiminovich, David and Wyder, Ted K.},
