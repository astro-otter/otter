@article{pasham_discovery_2018,
	title = {Discovery of a {Time} {Lag} between the {Soft} {X}-{Ray} and {Radio} {Emission} of the {Tidal} {Disruption} {Flare} {ASASSN}-14li: {Evidence} for {Linear} {Disk}-{Jet} {Coupling}},
